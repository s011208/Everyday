<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_activity_bg" >

    <ListView
        android:id="@+id/card_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/cards_container_margin_v"
        android:layout_marginLeft="@dimen/cards_container_margin_h"
        android:layout_marginRight="@dimen/cards_container_margin_h"
        android:layout_marginTop="@dimen/cards_container_margin_v"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/cards_list_view_item_space" >
    </ListView>

</RelativeLayout>