<com.bj4.yhh.everyday.cards.allapps.AllappsCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/allapps_option"
            android:layout_width="@dimen/option_ic_size"
            android:layout_height="@dimen/option_ic_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:padding="@dimen/option_ic_padding"
            android:scaleType="centerInside"
            android:src="@drawable/ic_option_btn" />

        <HorizontalScrollView
            android:id="@+id/allapps_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/allapps_option" >

            <LinearLayout
                android:id="@+id/allapps_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loading_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="@dimen/main_progress_circle_size"
        android:layout_height="@dimen/main_progress_circle_size"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat" />

</com.bj4.yhh.everyday.cards.allapps.AllappsCard>